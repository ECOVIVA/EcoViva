# -------------------------------
# Configurações do Django
# -------------------------------

# Chave secreta do Django (Gere uma nova com "django.core.management.utils.get_random_secret_key()")
SECRET_KEY=your-secret-key-here

# Modo Debug (True para desenvolvimento, False para produção)
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------------------
# Configurações do Banco de Dados
# -------------------------------

# Conexão PostgreSQL (se for usar, configure abaixo)
DB_NAME=meu_banco
DB_USER=meu_usuario
DB_PASSWORD=minha_senha
DB_HOST=localhost
DB_PORT=5432

# -------------------------------
# Configurações de E-mail (SMTP)
# -------------------------------

EMAIL_HOST=smtp.exemplo.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu-email@exemplo.com
EMAIL_HOST_PASSWORD=sua-senha
EMAIL_USE_TLS=True

# E-mail padrão de envio
DEFAULT_FROM_EMAIL=no-reply@ecoviva.com

# -------------------------------
# URLs do Sistema
# -------------------------------

# URL do Backend (API)
BACKEND_URL=https://api.exemplo.com

# URL do Frontend (Site ou app)
FRONTEND_URL=https://frontend.exemplo.com
